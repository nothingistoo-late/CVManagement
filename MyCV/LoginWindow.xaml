<Window x:Class="MyCV.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCV"
        mc:Ignorable="d"
        Title="Login To CV System" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Background="White">
    <Grid>
        <Label x:Name="Login_Label" Content="Login Information" HorizontalAlignment="Left" 
               Height="78" Margin="151,43,0,0" VerticalAlignment="Top" Width="474"
               FontSize="50" FontWeight="ExtraBold" Foreground="Black"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Height="68" 
                Margin="151,261,0,0" VerticalAlignment="Top" Width="474"
                FontSize="20" FontWeight="ExtraBold" Background="White"
                Click="LoginButton_Click"  />
    </Grid>
</Window>
